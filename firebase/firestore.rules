rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return request.auth != null && getUserRole() == 'Admin';
    }
    
    function isSupervisor() {
      return request.auth != null && getUserRole() == 'Supervisor';
    }
    
    function isWorker() {
      return request.auth != null && getUserRole() == 'Worker';
    }
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection - Users can read their own profile, admins can manage all
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAdmin();
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Jobs collection - Role-based access
    match /jobs/{jobId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin() || isSupervisor();
      allow update: if isAdmin() || isSupervisor();
      allow delete: if isAdmin();
      
      // Job documents sub-collections
      match /documents/{documentId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin() || isSupervisor();
      }
      
      // Job photos
      match /photos/{photoId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow delete: if isAdmin() || isSupervisor();
      }
    }
    
    // Timesheets collection
    match /timesheets/{timesheetId} {
      allow read: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid || isAdmin() || isSupervisor());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && 
                      (resource.data.userId == request.auth.uid || isAdmin() || isSupervisor());
      allow delete: if isAdmin();
    }
    
    // Chat messages
    match /messages/{messageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
    }
    
    // Client information - Admins and Supervisors only
    match /clients/{clientId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isSupervisor();
    }
    
    // Reports - Read by all, write by Admin/Supervisor
    match /reports/{reportId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isSupervisor();
    }
    
    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
